<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>

<%- include('../partials/Modal'); %>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="container">
        <div class="jumbotron container">
            <h2 class="text-center">Updating Selected Employee</h2>
            <% console.log(states) %>
            <form action="/employee/update" method="post">
              <div>
                  <input class="form-control" name="emp_cnt_id" id="emp_cnt_id" type="hidden" value=<%=current_employee_data.emp_cnt_id %>> 
                  <label>Employee Status</label>
                  <select class="form-control" name="employee_status" id="employee_status">
                    <option value=<%=current_employee_data.employee_status%>>Currently: <%=current_employee_data.employee_status%></option>
                    <option value="Active">Active</option>
                    <option value="Terminated">Terminated</option>
                  </select>
                  <label>First Name</label>
                  <input class="form-control" name="first_name" id="first_name"  value="<%=current_employee_data.first_name %>"> 
                  <label>Last Name</label>
                  <input class="form-control" name="last_name" id="last_name"  value="<%=current_employee_data.last_name %>">                  
                  <label>Role</label>
                  <select class="form-control" name="role_id" id="role_list">   
                    <option value=<%=current_employee_data.role_id%>>Currently: <%=current_employee_data.role_name%></option>   
                    <% role_id.forEach(function(role_id) { %>                   
                    <option value=<%=role_id.role_id %>><%=role_id.role_name %></option>
                    <% }); %>
                  </select>
                  <label>Employee Phone</label>
                  <input class="form-control" name="emp_phone" id="phone" value=<%=current_employee_data.emp_phone %>>
                  <label>Employee Email</label>
                  <input class="form-control" name="emp_email" id="email" value=<%=current_employee_data.emp_email %>>
                  <label>Street</label>
                  <input class="form-control" name="emp_street" id="street" value="<%=current_employee_data.emp_street %>">
                  <label>City</label>
                  <input class="form-control" name="emp_city" id="city" value="<%=current_employee_data.emp_city %>">
                  <label for="ex1">State</label>
                  <select class="form-control" name="states" id="states">
                    <% states.forEach(function(states) { %>              
                    <option value="<%=states.state_code_id %>"><%=states.state_name%></option>
                    <% }); %>
                  </select>
                  <label>Zipcode</label>
                  <input class="form-control" name="emp_zipcode" id="emp_zipcode" value="<%=current_employee_data.emp_zipcode %>">
                  <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
              </div>
            </form> 
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>