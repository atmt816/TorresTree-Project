<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>

<%- include('../partials/Modal'); %>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="container">
        <div class="jumbotron container">
            <h2 class="text-center">Updating Selected License</h2>
            <form action="/license/update" method="post">
              <div>
                  <input class="form-control" name="license_id" id="license_id" type="hidden" value=<%=current_license_data.License_ID %>> 
                  <label>License Name</label>
                      <input class="form-control" name="license_name" value="<%=current_license_data.License_name%>">
                  <label>License Description</label>
                      <textarea class="form-control" name="license_description"><%=current_license_data.License_description%></textarea>
                  <label>License Expiration Date</label>
                      <input class="form-control" name="license_expiration_date" value=<%=current_license_data.License_expiration_date%>><BR>
                  <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
              </div>
            </form> 
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>