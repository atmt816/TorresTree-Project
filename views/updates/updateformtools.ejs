<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>

<%- include('../partials/Modal'); %>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="container">
        <div class="jumbotron container">
            <h2 class="text-center">Updating Selected Tool</h2>
            <form action="/tools/update" method="post">
                <!--Content goes here-->
                <input type="hidden" name="equipment_id" value=<%=current_tool_data.equipment_id%>>
                <label for="ex1">Tool Name</label><BR>
                  <input class="form-control" placeholder="Saw" name="toolname" id="ex1" type="text" value="<%=current_tool_data.equipment_name%>"> <%console.log(current_tool_data.equipment_name, current_tool_data)%>
                <label for="ex1">Tool Type</label><BR>
                  <input class="form-control" placeholder="Landscape" name="tooltype" id="ex1" type="text"value=<%=current_tool_data.equipment_type%>>
                <label for="ex1">Quality</label>
                  <select class="form-control" name="quality" id="quality">
                    <option value=<%=current_tool_data.quality%>>Currently Selected Quality: <%=current_tool_data.quality%> </option>                        
                    <option value="Working">Working</option>
                    <option value="Terminated">Terminated</option>
                  </select>         
                <label for="ex1">Supplier Name</label>
                  <select class="form-control" name="supplier_id" id="supplier_id">
                    <option value=<%=current_tool_data.supplier_id%>> Currently Selected Supplier: <%=current_tool_data.supplier_name%></option>
                    <option value="null">None</option>
                    <% suppliers_list.forEach(function(suppliers_list) { %>              
                      <option value=<%= suppliers_list.supplier_id%>><%= suppliers_list.supplier_name%></option>
                    <% }); %>
                    </select>
                <BR>
        
                <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>    
                </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>