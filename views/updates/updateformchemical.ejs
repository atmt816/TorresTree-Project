<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>

<%- include('../partials/Modal'); %>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="container">
        <div class="jumbotron container">
            <h2 class="text-center">Updating Selected Chemcial</h2>
            <form action="/chemical/update" method="post">
              <div>
                <input type="hidden" name="chemical_id" value=<%=chemical_id%>>  
                <label for="ex1">Chemical Name</label><BR>
                    <input class="form-control" placeholder="Chemcial Name" name="chemicalname" id="ex1" type="text" value="<%=current_chemical_data.chemical_Name%>"> 
                <label for="ex1">Chemical Type</label><BR>
                    <input class="form-control" placeholder="Example: Herbicide" name="chemcialtype" id="ex1" type="text" value="<%=current_chemical_data.chemcial_type%>">
                <label for="ex1">Supplier Name</label>
                <!-- Supplier Drop Down -->
                <select class="form-control" name="supplier_id" id="supplier_id">
                    <option value=<%=current_chemical_data.supplier_id%>>Currently Selected: <%=current_chemical_data.supplier_name%></option>
                    <option value="null">None</option>
                    <% suppliers_list.forEach(function(suppliers_list) { %>              
                        <option value=<%= suppliers_list.supplier_id%>><%= suppliers_list.supplier_name%></option>
                    <% }); %>
                </select>
                <!-- License Drop Down -->
                <label for="ex1">License Name</label>
                <select class="form-control" name="licenses_id" id="licenses_id">
                    <option value=<%=current_chemical_data.license_id%>>Currently Selected License: <%=current_chemical_data.License_name%></option>
                    <option value="null">None</option>
                    <% license_list.forEach(function(license_list) { %>              
                        <option value=<%= license_list.License_ID%>><%= license_list.License_name%></option>
                    <% }); %>
                </select>
                <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
              </div>
            </form> 
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>