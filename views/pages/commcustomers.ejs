<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<%- include('../partials/Modal'); %>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h2>Commercial Customers</h2>
            <div>
                <div>
                    <button class="btn btn-link" id="myBtn">Add New Customer</button>
                    <div id="myModal" class="modal">
                        
                        <!-- Modal content -->
                        <div class="modal-content">
                          <span class="close">&times;</span> 
                          <h2 class="text-center">Add New Commercial Customer</h2>   
                                <div class="jumbotron">                          
                                <form action="/customers/commercial/new" method="post">
                                    
                                        
                                        <label for="ex1">Business Name</label>
                                        <input class="form-control" placeholder="Home Depot" name="businessname" id="ex1" type="text">
                                        <label for="ex1">Business Hours</label>
                                        <input class="form-control" placeholder="11:00am-9:30pm" name="businesshrs" id="ex1" type="text">
                                        <label for="ex1">Phone</label>
                                        <input class="form-control" placeholder="1112223333" name="phone" id="ex1" type="text"><BR>
                                        <label for="ex1">Email</label>
                                        <input class="form-control" placeholder="example@email.com" name="email" id="ex1" type="text"><BR>
                                        <label for="ex1">Street</label>
                                        <input class="form-control" placeholder="123 Example St" name="street" id="ex1" type="text"><BR> 
                                        <label for="ex1">City</label>
                                        <input class="form-control" placeholder="Houston" name="city" id="ex1" type="text"><BR>   
                                        <!--Drop down for state-->
                                        <label for="ex1">State</label>
                                        <select class="form-control" name="state" id="state">
                                            <% states.forEach(function(states) { %>              
                                              <option value=<%=states.state_code_id %>><%=states.state_name %></option>
                                            <% }); %>
                                        </select><BR>
                                        
                                        <label for="ex1">Zip Code</label>
                                        <input class="form-control" placeholder="00000" name="zipcode" id="ex1" type="text"><BR>
                                        <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
                                        
                                                                         
                                  </form>   
                                </div>                                                    
                        </div>
                      
                    </div>
                    
                    <button class="btn btn-link" id="myBtn2">Update Existing Customer</button>
                    <div id="myModal2" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close2">&times;</span>
                            <h2 class="text-center">Update Existing Customer</h2>
                            <form action="/customers/commercial/update/info" method="POST">
                                <div class="jumbotron">
                                    <!--drop down for Job ID -->
                                    <label for="ex1">Select the Customer ID You Wish to Update</label>
                                    <select class="form-control" name="customer_id" id="customer_id">
                                      <% id_dropdown.forEach(function(id_dropdown) { %>              
                                        <option value=<%= id_dropdown.customer_id%>>
                                            <%= id_dropdown.customer_id%> | <%= id_dropdown.business_name%>
                                        </option>
                                      <% }); %>
                                    </select>
                                    <br>
                                    <button type="submit" style="color:#198754" class="btn btn-success">Submit</button>
                                </div> 
                            </form>
                        </div>
        
                      
                    </div>
    
                    <button class="btn btn-link" id="myBtn3">Delete Exisiting Customer</button>
        
                    <div id="myModal3" class="modal">
        
                        <!-- Modal content -->
                        <div class="modal-content">
                          <span class="close3">&times;</span>
                          <h2 class="text-center">Delete Existing Customer</h2>
                          <form action="/customers/commercial/delete" method="post">
                          <!--drop down of invoice here-->
                            <div class="jumbotron">
                                <label for="ex1">Select the Customer ID You Wish to Delete</label>
                                    <select class="form-control" name="customer_id" id="customer_id">
                                        <% id_dropdown.forEach(function(id_dropdown) { %>              
                                            <option value=<%= id_dropdown.customer_id%>>
                                                <%= id_dropdown.customer_id%> | <%= id_dropdown.business_name%>
                                            </option>
                                        <% }); %>
                                    </select>
                                    <br>
                                    <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
                            </div>
                          </form>
        
                        </div>
                      
                    </div>
        </div>
        <div>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Business ID</th>
                        <th>Business Name</th>
                        <th>Business Hours</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        
                    </tr>
                </thead>
                <tbody>
                <% commcustomer_list.forEach(function(commcustomer_list) { %>
                <tr><td><%= commcustomer_list.customer_id%></td>
                    <td><%= commcustomer_list.business_name%></td>
                    <td><%= commcustomer_list.business_hrs%></td>
                    <td><%= commcustomer_list.phone%></td>
                    <td><%= commcustomer_list.email%></td>
                    <td><%= commcustomer_list.street%><br><%=commcustomer_list.city%>,&nbsp<%=commcustomer_list.state_code_id%>&nbsp<%=commcustomer_list.zipcode%></td>
                </tr>
                <% }); %>
               
            </tbody>
            </table>    
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>